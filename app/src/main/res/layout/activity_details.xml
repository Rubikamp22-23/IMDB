<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#636363"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview_details"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="24dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_details"
        android:layout_marginBottom="70dp"
        android:layout_height="400dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:background="#636363"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Maleficent"
            android:textColor="#CD8B0C"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:padding="22dp"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="bottom"
            android:background="#CD8B0C"
            android:text="LINK"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginBottom="12dp"
            android:layout_height="56dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="32dp"
            android:layout_marginStart="22dp"
            android:text="Release date"
            android:textColor="#CD8B0C"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="IMDB"
            android:layout_marginStart="12dp"
            android:textColor="#CD8B0C"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="48dp"
            android:text="Genres"
            android:textColor="#CD8B0C"
            android:textSize="20sp"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/Release_date_text"
            android:layout_width="wrap_content"
            android:text="2014"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="62dp"
            android:layout_marginTop="54dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/imdbText"
            android:layout_width="wrap_content"
            android:text="6.9"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginTop="54dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/genresText"
            android:layout_width="wrap_content"
            android:text="Fantasy\nAdventure"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="end|center"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="58dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:text="Cast"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#CD8B0C"
            android:layout_gravity="start|center"
            android:layout_marginTop="76dp"
            android:layout_marginStart="22dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/castText"
            android:layout_width="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="90dp"
            android:layout_marginStart="24dp"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>